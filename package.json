{
  "activationEvents": [
    "onStartupFinished",
    "onDebug",
    "workspaceContains:**/*.tdr"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-tdr-sidebar-view",
          "title": "Technical Debts",
          "icon": "resources/checklist.svg"
        }
      ]
    },
    "views": {
      "vscode-tdr-sidebar-view": [
        {
          "type": "webview",
          "id": "vscode-tdr-sidebar",
          "name": "Technical Debts",
          "icon": "resources/checklist.svg",
          "contextualTitle": "Technical Debts"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-tdr.addExplorerTechDebt",
        "category": "Technical Debts",
        "title": "Add technical debt"
      },
      {
        "command": "vscode-tdr.addEditorTechDebt",
        "category": "Technical Debts",
        "title": "Add technical debt here"
      }
    ],
    "languages": [
      {
        "extensions": [
          ".tdr"
        ],
        "id": "technical-debt-record"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-tdr.addExplorerTechDebt",
          "group": "techdebt",
          "when": "explorerViewletVisible"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-tdr.addEditorTechDebt",
          "group": "techdebt",
          "when": "editorTextFocus"
        }        
      ]
    }
  },
  "description": "",
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "displayName": "vscode-tdr",
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/extension.js",
  "name": "vscode-tdr",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "version": "0.0.1",
  "dependencies": {
    "front-matter": "^4.0.2",
    "js-yaml": "^4.1.0"
  }
}
